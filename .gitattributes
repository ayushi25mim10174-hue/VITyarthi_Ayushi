# Auto detect text files and perform LF normalization
 text=auto

# Text files
.md text
.txt text
.html text
.css text
.js text
.json text
.xml text
.yml text
.yaml text

# Binary files
.png binary
.jpg binary
.jpeg binary
.gif binary
.ico binary
.pdf binary
.zip binary
.tar binary
.gz binary

# Git related
.gitattributes text
.gitignore text

# Source code specific handling
.js text eol=lf
.css text eol=lf
.html text eol=lf
.md text eol=lf

# Windows specific
.bat text eol=crlf
.cmd text eol=crlf

# Ensure Windows and Mac users don't accidentally change line endings
.sln text eol=crlf
.csproj text eol=crlf

# Documentation
/LICENSE text
/README.md text
/statement.md text

# Export ignore for archives
/.gitattributes export-ignore
/.gitignore export-ignore

# Linguist attributes for language detection
.js linguist-language=JavaScript
.html linguist-language=HTML
.css linguist-language=CSS
.md linguist-language=Markdown
